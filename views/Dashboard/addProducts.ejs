<%- include layouts/Header.ejs %>

<%- include layouts/sideBar.ejs %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Fill your shop with products</h1>
                    <% if (messages.error) { %>
                       <p style="color:red;text-align:center"><%- messages.error %></p>
                      <%}%>
                      <% if(messages.success) {  %>
                        <p style="color:green;text-align:center"><%- messages.success %></p>
                        <%}%>
                        <% if(messages.info){%>
                        <p style="color:blue;text-align:center"><%- messages.info %></p>
                        <%}%>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add product
                        </div>
                        <div class="panel-body">

                            <div class="row" >
                                <div class="col-lg-6">
                                    <form role="form"  method="post" action="/addProduct" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Product Name</label>
                                            <input class="form-control" name="productName">

                                        </div>
                                        <div class="form-group">
                                            <label>Enter currency and price</label>
                                            <div class="row">
                                              <div class="col-xs-6 col-sm-6 col-md-6">
                                                <div class="form-group">
                                                  <select id="currency" name="currency" class="form-control">
                                                    <option value="FRW">FRW</option>

                                                  </select>
                                                </div>
                                              </div>
                            			    				<div class="col-xs-6 col-sm-6 col-md-6">
                            			    					<div class="form-group">
                            			                 <input class="form-control" placeholder="Enter price" name="price">
                            			    					</div>
                            			    				</div>

                            			    			</div>
                                        </div>
                                        <div class="form-group">
                                            <label>Unit of measurement</label>
                                            <select id="unit" name="unit" class="form-control">
                                              <option value="Kg">kg</option>
                                                <option value="l">liter</option>
                                                  <option value="piece">piece</option>
                                                    <option value="m">meter</option>
                                            </select>

                                        </div>
                                        <div class="form-group">
                                            <label>Product Description</label>
                                            <textarea class="form-control" rows="3" name="description"></textarea>
                                        </div>
                                        <div class="form-group">
                                             <label>Add Pictures of the product</label>
                                        </div>
                                        <div class="row">
                                          <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                              <label>Product picture 1</label>
                                              <input type="file" name="pic1">
                                            </div>
                                          </div>
                                          <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                              <label>Product picture 2</label>
                                              <input type="file" name="pic2">
                                            </div>
                                          </div>
                                          <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                              <label>Product picture 3</label>
                                              <input type="file" name="pic3">
                                            </div>
                                          </div>
                                          <div class="col-xs-6 col-sm-6 col-md-6">
                                            <div class="form-group">
                                              <label>Product picture 4</label>
                                              <input type="file" name="pic4">
                                            </div>
                                          </div>
                                        </div>
                                        <center>
                                        <button type="submit" class="btn btn-info btn-lg">Add products</button>
                                        </center>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <div class="col-lg-6">



                                </div>
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>

</body>

</html>
